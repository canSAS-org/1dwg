<section xml:id="cansas1d_documentation-element-SAScollimation" xmlns="http://docbook.org/ns/docbook"
    version="5.0" xmlns:xlink="http://www.w3.org/1999/xlink">
    <title>SAScollimation element</title>
    <itemizedlist mark="opencircle">
        <listitem>
            <indexterm significance="preferred">
                <primary>element</primary>
                <secondary>SAScollimation</secondary>
            </indexterm> 
            <para>
                parent:
                <link xlink:href="#cansas1d_documentation-element-SASinstrument">SASinstrument</link>
            </para>
        </listitem>
    </itemizedlist>
    <figure>
        <title>The SAScollimation element</title>
        <mediaobject>
            <imageobject>
                <imagedata fileref="../../graphics/6-SAScollimation.png" width="200pt"
                    scalefit="1"/>
            </imageobject>
            <textobject>
                <phrase>cansas1d-v1-6-SAScollimation</phrase>
            </textobject>
            <caption>
                <para>The SAScollimation element</para>
            </caption>
        </mediaobject>
    </figure>
    <section>
        <title>SAScollimation</title>
        <table orient="port" role="small">
            <title/>
            <tgroup cols="5">
                <colspec colname="c1" colwidth="15*"/>
                <colspec colname="c2" colwidth="15*"/>
                <colspec colname="c3" colwidth="10*"/>
                <colspec colname="c4" colwidth="30*"/>
                <colspec colname="c5" colwidth="30*"/>
                <tbody>
                    <row>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Name</entry>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Type</entry>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Occurrence</entry>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Description</entry>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Attributes</entry>
                    </row>
                    <row>
                        <entry>
                            <literal>length</literal>
                            <indexterm>
                                <primary>element</primary>
                                <secondary>length</secondary>
                            </indexterm>
                        </entry>
                        <entry>
                            floating-point number
                        </entry>
                        <entry>
                            [0..1]
                        </entry>
                        <entry>
                            Amount/length of collimation inserted (on a SANS instrument)
                        </entry>
                        <entry><literal>unit={unit}</literal></entry>
                    </row>
                    <row>
                        <entry>
                            <literal>aperture</literal>
                            <indexterm>
                                <primary>element</primary>
                                <secondary>aperture</secondary>
                            </indexterm>
                        </entry>
                        <entry>
                            container
                        </entry>
                        <entry>
                            [0..inf]
                        </entry>
                        <entry>
                            Description of a slit or aperture. 
                            <literal>name</literal>: Optional name attribute for this aperture.  
                            <literal>type</literal>: Optional text attribute to describe the type 
                            aperture (pinhole, 4-blade slit, Soller slit, ...).
                        </entry>
                        <entry><literal>name={type}</literal></entry>
                    </row>
                </tbody>
            </tgroup>
        </table>
    </section>
    <section>
        <title>aperture</title>
        <table orient="port" role="small">
            <title/>
            <tgroup cols="5">
                <colspec colname="c1" colwidth="15*"/>
                <colspec colname="c2" colwidth="15*"/>
                <colspec colname="c3" colwidth="10*"/>
                <colspec colname="c4" colwidth="30*"/>
                <colspec colname="c5" colwidth="30*"/>
                <tbody>
                    <row>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Name</entry>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Type</entry>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Occurrence</entry>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Description</entry>
                        <entry><?dblatex bgcolor="[gray]{0.8}"?>Attributes</entry>
                    </row>
                    <row>
                        <entry>
                            <literal>size</literal>
                            <indexterm>
                                <primary>element</primary>
                                <secondary>size</secondary>
                            </indexterm>
                        </entry>
                        <entry>
                            container
                        </entry>
                        <entry>
                            [0..1]
                        </entry>
                        <entry>
                            Opening dimensions of this aperture.
                        </entry>
                        <entry><literal>name={name}</literal></entry>
                    </row>
                    <row>
                        <entry>
                            <literal>distance</literal>
                            <indexterm>
                                <primary>element</primary>
                                <secondary>distance</secondary>
                            </indexterm>
                        </entry>
                        <entry>
                            floating-point number
                        </entry>
                        <entry>
                            [0..1]
                        </entry>
                        <entry>
                            Distance from this collimation element to the sample.
                        </entry>
                        <entry><literal>unit={unit}</literal></entry>
                    </row>
                </tbody>
            </tgroup>
        </table>
    </section>
    <section>
        <title>size</title>
        <para>
            <informaltable>
                <tgroup cols='2'>
                    <tbody>
                        <row>
                            <entry>
                                <mediaobject>
                                    <imageobject>
                                        <imagedata fileref="../../graphics/translation-orientation-geometry.jpg" width='200pt' scalefit='1'/>
                                    </imageobject>
                                    <caption>
                                        <para>view from source</para>
                                    </caption>
                                </mediaobject>
                                <indexterm>
                                    <primary>geometry</primary>
                                    <secondary>translation</secondary>
                                </indexterm>
                            </entry>
                            <entry>
                                <mediaobject>
                                    <imageobject>
                                        <imagedata fileref="../../graphics/translation-orientation-geometry-2.jpg" width='200pt' scalefit='1'/>
                                    </imageobject>
                                    <caption>
                                        <para>view from detector</para>
                                    </caption>
                                </mediaobject>
                                <indexterm>
                                    <primary>geometry</primary>
                                    <secondary>rotation</secondary>
                                </indexterm>
                            </entry>
                        </row>
                    </tbody>
                </tgroup>
            </informaltable>
            <table orient="port" role="small">
                <title/>
                <tgroup cols="5">
                    <colspec colname="c1" colwidth="15*"/>
                    <colspec colname="c2" colwidth="15*"/>
                    <colspec colname="c3" colwidth="10*"/>
                    <colspec colname="c4" colwidth="30*"/>
                    <colspec colname="c5" colwidth="30*"/>
                    <tbody>
                        <row>
                            <entry><?dblatex bgcolor="[gray]{0.8}"?>Name</entry>
                            <entry><?dblatex bgcolor="[gray]{0.8}"?>Type</entry>
                            <entry><?dblatex bgcolor="[gray]{0.8}"?>Occurrence</entry>
                            <entry><?dblatex bgcolor="[gray]{0.8}"?>Description</entry>
                            <entry><?dblatex bgcolor="[gray]{0.8}"?>Attributes</entry>
                        </row>
                        <row>
                            <entry>
                                <literal>x</literal>
                                <indexterm>
                                    <primary>element</primary>
                                    <secondary>x</secondary>
                                </indexterm>
                            </entry>
                            <entry>
                                floating-point number
                            </entry>
                            <entry>
                                [0..1]
                            </entry>
                            <entry>
                                Dimension of the collimation in X. 
                                The <literal>unit</literal> attribute is required. See
                                the section about the
                                <link xlink:href="#cansas1d_documentation-rules">rules</link>
                                for acceptable values.
                            </entry>
                            <entry><literal>unit={unit}</literal></entry>
                        </row>
                        <row>
                            <entry>
                                <literal>y</literal>
                                <indexterm>
                                    <primary>element</primary>
                                    <secondary>y</secondary>
                                </indexterm>
                            </entry>
                            <entry>
                                floating-point number
                            </entry>
                            <entry>
                                [0..1]
                            </entry>
                            <entry>
                                Dimension of the collimation in Y. 
                                The <literal>unit</literal> attribute is required. See
                                the section about the
                                <link xlink:href="#cansas1d_documentation-rules">rules</link>
                                for acceptable values.
                            </entry>
                            <entry><literal>unit={unit}</literal></entry>
                        </row>
                        <row>
                            <entry>
                                <literal>z</literal>
                                <indexterm>
                                    <primary>element</primary>
                                    <secondary>z</secondary>
                                </indexterm>
                            </entry>
                            <entry>
                                floating-point number
                            </entry>
                            <entry>
                                [0..1]
                            </entry>
                            <entry>
                                <para>
                                    Dimension of the collimation in Z. 
                                    The <literal>unit</literal>
                                    attribute is required. See the section about the <link
                                        xlink:href="#cansas1d_documentation-rules">rules</link> for
                                    acceptable values. 
                                    <tip>
                                        <para>
                                            While Z dimension is allowed by the
                                            standard (provided by use of a standard element in the XML Schema),
                                            it does not make sense for small-angle scattering.
                                        </para>
                                    </tip>
                                </para>
                            </entry>
                            <entry><literal>unit={unit}</literal></entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
        </para>
    </section>
</section>
